<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/start"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="            학생 회원가입"
                style="@style/title"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/name"
                android:layout_margin="5dp"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                style="@style/head"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/name_in"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="이름을 입력하세요"
                style="@style/edit"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/id"
                android:layout_margin="5dp"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/ID"
                style="@style/head"
                android:includeFontPadding="false"/>
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/id_in"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="학번"
                style="@style/edit"
                android:includeFontPadding="false"/>
            <Button
                android:id="@+id/check"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"
                style="@style/basis"
                android:includeFontPadding="false"/>


            <TextView
                android:id="@+id/password"
                android:layout_margin="5dp"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                style="@style/head"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/password_in"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="숫자+영문자 8~16자"
                style="@style/edit"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/passwordCheck"
                android:layout_margin="5dp"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                style="@style/head"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/passwordCheck_in"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="비밀번호를 입력하세요"
                style="@style/edit"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/major"
                android:layout_margin="5dp"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학과"
                style="@style/head"
                android:includeFontPadding="false"/>
            <Spinner
                android:id="@+id/major_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/phone"
                android:layout_margin="5dp"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                style="@style/head"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/phone_in"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="전화번호를 입력하세요"
                style="@style/edit"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/photo"
                android:layout_margin="5dp"
                android:paddingTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유체크 사진"
                style="@style/head"
                android:includeFontPadding="false"/>

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:adjustViewBounds="true"
                android:src="@drawable/people_icon"/>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="사진 선택"
                style="@style/basis"
                android:includeFontPadding="false"/>

            <Button
                android:id="@+id/complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입 완료"
                style="@style/edit"
                android:includeFontPadding="false"/>
        </LinearLayout>

        </ScrollView>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="66dp" />

</androidx.constraintlayout.widget.ConstraintLayout>