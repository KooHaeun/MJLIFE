<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="60dp"
        android:src="@drawable/school"
        />

    <TextView
        android:id="@+id/name"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/school" />

    <EditText
        android:id="@+id/name_in"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:hint="이름을 입력하세요"/>

    <TextView
        android:id="@+id/id"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_in"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        android:layout_marginTop="20dp"
        android:text="@string/ID"
        android:textSize="20sp"/>
    <EditText
        android:layout_margin="5dp"
        android:id="@+id/id_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/id"
        android:hint="학번"/>
    <Button
        android:id="@+id/check"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/id_in"
        app:layout_constraintTop_toBottomOf="@+id/id"
        android:text="중복확인"/>


    <TextView
        android:id="@+id/password"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/id_in" />

    <EditText
        android:id="@+id/password_in"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:hint="비밀번호를 입력하세요"/>

    <TextView
        android:id="@+id/major"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학과"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/password_in" />
    <Spinner
        android:id="@+id/major_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/major"
        />

    <TextView
        android:id="@+id/phone"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/major_in" />

    <EditText
        android:id="@+id/phone_in"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        android:hint="전화번호를 입력하세요"/>

    <TextView
        android:id="@+id/photo"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유체크 사진"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/phone_in" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:maxWidth="100dp"
        android:maxHeight="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/people_icon"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/photo"/>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="사진 선택"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/userImage"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="66dp" />

</androidx.constraintlayout.widget.ConstraintLayout>