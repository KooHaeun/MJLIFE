<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="컴퓨터공학과"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        style="@style/title"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2학년"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        style="@style/title"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/dep"/>

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과목"
        android:textColor="#326ca9"
        android:textSize="15sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        style="@style/head"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/dep"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Spinner
        android:id="@+id/sbSpinner"
        android:layout_width="wrap_content"
        android:spinnerMode="dialog"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        style="@style/basis"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/subText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/scText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요일/시간"
        android:textColor="#326ca9"
        android:textSize="15sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        style="@style/head"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/sbSpinner"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Spinner
        android:id="@+id/scSpinner"
        android:layout_width="wrap_content"
        android:spinnerMode="dialog"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        style="@style/basis"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/scText"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="00:00"
        style="@style/basis"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/scText"
        app:layout_constraintLeft_toRightOf="@+id/scSpinner"/>
    <TextView
        android:id="@+id/etcText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:text="~"
        style="@style/basis"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/scText"
        app:layout_constraintLeft_toRightOf="@+id/start_text"/>
    <TextView
        android:id="@+id/end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:text="00:00"
        style="@style/basis"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/scText"
        app:layout_constraintLeft_toRightOf="@+id/etcText"/>
    <TimePicker
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/scText"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TimePicker
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/scText"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>