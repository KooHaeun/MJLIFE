<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:src="@drawable/school"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:text="이름"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/school" />

    <EditText
        android:id="@+id/name_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="이름을 입력하세요"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:paddingTop="13dp"
        android:text="@string/ID"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/name_in" />

    <EditText
        android:id="@+id/id_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="교번"
        app:layout_constraintLeft_toLeftOf="@+id/start"


        app:layout_constraintTop_toBottomOf="@+id/id" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="중복확인"
        app:layout_constraintLeft_toRightOf="@+id/id_in"
        app:layout_constraintTop_toBottomOf="@+id/id" />


    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:text="비밀번호"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/id_in" />

    <EditText
        android:id="@+id/password_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="비밀번호를 입력하세요"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/passwordCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:text="비밀번호 확인"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/password_in" />

    <EditText
        android:id="@+id/passwordCheck_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="비밀번호를 재입력하세요"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/passwordCheck" />

    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:text="학과"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/passwordCheck_in" />

    <Spinner
        android:id="@+id/major_in"
        android:entries="@array/major_array"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/major" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="13dp"
        android:text="전화번호"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/major_in" />

    <EditText
        android:id="@+id/phone_in"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="전화번호를 입력하세요"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/phone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="@+id/start"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="66dp" />

</androidx.constraintlayout.widget.ConstraintLayout>